{% trans_default_domain 'app' %}
{% extends 'base.html.twig' %}

{% block title %}{{ "Sign in !"|trans }}{% endblock %}

{% block body_classes %}login-page text-center{% endblock %}

{% block body %}
    <form class="form-login" action="{{ path('app_login') }}" method="post">

        <h1 class="h3 mb-3 font-weight-normal">{{ "Please Sign In"|trans }}</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label for="inputUsername" class="sr-only">{{ "Username or email"|trans }}</label>
        <input
                type="text" value="{{ last_username }}"
                placeholder="{{ "Username or email"|trans }}"
                name="username"
                id="inputUsername"
                class="form-control"
                required
                autofocus
        >
        <label for="inputPassword" class="sr-only">{{ "Password"|trans }}</label>
        <input
                type="password"
                name="password"
                id="inputPassword"
                class="form-control"
                placeholder="{{ "Password"|trans }}"
                required
        >


        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> {{ "Remember me"|trans }}
            </label>
        </div>

        <input
                type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary btn-block" type="submit">{{ "Sign in"|trans }}</button>
    </form>
{% endblock %}
